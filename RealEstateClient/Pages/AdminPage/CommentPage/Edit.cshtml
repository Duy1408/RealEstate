@page
@model RealEstateClient.Pages.AdminPage.CommentPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comment</h4>
@if (ViewData["Success"] != null)
{
    <div class="alert alert-danger">@ViewData["Success"]</div>
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Error"]</div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.CommentID" />
            <div class="form-group">
                <label asp-for="Comment.CommentDate" class="control-label"></label>
                <input asp-for="Comment.CommentDate" class="form-control" />
                <span asp-validation-for="Comment.CommentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Content" class="control-label"></label>
                <input asp-for="Comment.Content" class="form-control" />
                <span asp-validation-for="Comment.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Rate" class="control-label"></label>
                <input asp-for="Comment.Rate" class="form-control" />
                <span asp-validation-for="Comment.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.RealEstateID" class="control-label"></label>
                <input asp-for="Comment.RealEstateID" class="form-control" />
                <span asp-validation-for="Comment.RealEstateID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Comment.Status" /> @Html.DisplayNameFor(model => model.Comment.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Comment.UserID" class="control-label"></label>
                <input asp-for="Comment.UserID" class="form-control" />
                <span asp-validation-for="Comment.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
