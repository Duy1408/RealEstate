@page
@model RealEstateClient.Pages.AdminPage.RealEstatepage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RealEstate</h4>
@if (ViewData["Success"] != null)
{
    <div class="alert alert-danger">@ViewData["Success"]</div>
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">@ViewData["Erroe"]</div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RealEstate.RealEstateID" />
            <div class="form-group">
                <label asp-for="RealEstate.RealEstateName" class="control-label"></label>
                <input asp-for="RealEstate.RealEstateName" class="form-control" />
                <span asp-validation-for="RealEstate.RealEstateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealEstate.RealEstateAddress" class="control-label"></label>
                <input asp-for="RealEstate.RealEstateAddress" class="form-control" />
                <span asp-validation-for="RealEstate.RealEstateAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealEstate.Estimation" class="control-label"></label>
                <input asp-for="RealEstate.Estimation" class="form-control" />
                <span asp-validation-for="RealEstate.Estimation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealEstate.Description" class="control-label"></label>
                <input asp-for="RealEstate.Description" class="form-control" />
                <span asp-validation-for="RealEstate.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RealEstate.Status" /> @Html.DisplayNameFor(model => model.RealEstate.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RealEstate.Image" class="control-label"></label>
                <input asp-for="RealEstate.Image" class="form-control" />
                <span asp-validation-for="RealEstate.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RealEstate.UserID" class="control-label"></label>
                <input asp-for="RealEstate.UserID" class="form-control" />
                <span asp-validation-for="RealEstate.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
